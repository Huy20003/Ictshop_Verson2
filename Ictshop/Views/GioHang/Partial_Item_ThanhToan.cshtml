

@model Ictshop.Models.GioHang



@if (Model != null)

{
    <h3>GIỎ HÀNG <span style="float:right;position:relative"><small>@Model.GetTotalQuantity()</small></span></h3> var i = 0;
    var tongtien = decimal.Zero;
    <div style="border:1px solid #808080;">
        <table class="table">
            @foreach (var item in Model.Items)
            {
                tongtien += (decimal)item._spProduct.Giatien;
                <tr>
                    <td>@item._spProduct.Tensp</td>
                    <td>@item._spProduct.Giatien</td>
                </tr>
            }
            <tr>
                <td>Tổng tiền</td>
                <td> @String.Format("{0:0,0}", tongtien)</td>
            </tr>
        </table>
    </div>}