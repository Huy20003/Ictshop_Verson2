                                        @*<li class="tab" data-active-tab="tab_2"><span>Additional Information</span></li>*@
                                        <li class="tab" data-active-tab="tab_3"><span>Reviews (@ViewBag.CountReview)</span></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">

                                <!--<!-- Tab Description -->-->
                                <div id="tab_1" class="tab_container active">
