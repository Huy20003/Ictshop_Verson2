                                        @*@Html.Raw(Model.)*@
                                    </div>
                                </div>
                                <!-- Tab Additional Info -->
                                <!-- Tab Reviews -->

                                <div id="tab_3" class="tab_container">
                                    <div class="row">

                                        <!-- User Reviews -->

                                        <div class="col-lg-6 reviews_col">
                                            @Html.Action("_Load_Review", "Review", new { productID = Model.Masp })
                                        </div>

                                        <!-- Add Review -->

                                        <div class="col-lg-6 add_review_col">

                                            @Html.Action("_Review", "Review", new { productID = Model.Masp })

                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
@section scripts
    {
